generator client {
  provider = "prisma-client-js"
  output   = "./"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Language {
  id   String @id @default(uuid())
  code String @unique
  name String
}

model Message {
  id        String   @id @default(uuid())
  role      Role
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
}

enum Role {
  user
  system
}
